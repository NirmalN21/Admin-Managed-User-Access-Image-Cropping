<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/viewUser.css">
    <title>Responsive Table</title>

</head>

<body>

    <div class="main-container mt-5">

        <button type="submit" onclick="onBack(event)" class="view-button">&lt; Back </button>
        <!-- Desktop view table -->
        <table class="table table-bordered table-responsive-lg d-none d-lg-table mt-4">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Name</th>
                    <th>Photo</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% if (users) { %>
                    <% if (users.length>0) { %>
                        <% users.forEach(user=>{ %>
                            <tr>
                                <td><%= user.userId %></td>
                                <% if(user.applied && user.verified){ %>
                                    <td><%=user.username%></td>
                                    <td><img src="/uploads/<%=user.imgURL%>" alt="User Photo"></td>
                                    <td>
                                        <button class="view-button btn-2" onClick="onDelete('<%= user.userId %>')">Delete</button>
                                    </td>
                                <% }else if(user.applied){ %>
                                    <td><%=user.username%></td>
                                    <td><img src="/uploads/<%=user.imgURL%>" alt="User Photo"></td>
                                    <td>
                                        <button class="view-button btn-1" onClick="onDone('<%= user.userId %>')">Done</button>
                                        <button class="view-button btn-2" onClick="onDelete('<%= user.userId %>')">Delete</button>
                                    </td>
                                <% }else{ %>
                                    <td>-</td>
                                    <td><img src="/images/dp.jpeg" alt="User Photo"></td>
                                    <td>
                                        <button class="view-button btn-2" onClick="onDelete('<%= user.userId %>')">Delete</button>
                                    </td>
                                <%}%>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <span class="text-box">
                            No user created
                        </span>
                            
                    <% } %>
                <% } else { %>
                    <div class="spinner-border" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                <% } %>
            </tbody>
        </table>

        <!-- Mobile view layout -->
        <div class="d-lg-none">
            <% if (users) { %>
                <% if (users.length>0) { %>
                    <% users.forEach(user=>{ %>
                            <% if(user.applied && user.verified){ %>
                                <div class="details mt-4">
                                    <div class="mobile-view box-1">
                                        <div>User ID: <%=user.userId%></div>
                                        <div>Name: <%=user.username%></div>
                                    </div>
                                    <div class="mobile-view box-2">
                                        <div>Photo: <img src="/uploads/<%=user.imgURL%>" alt="User Photo"></div>
                                        <div>
                                            <span>Action</span>
                                            <div class="btn-container">
                                                <button class="view-button btn-2" onClick="onDelete('<%= user.userId %>')">Delete</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                    
                            <% }else if(user.applied){ %>
                                <div class="details mt-4">
                                    <div class="mobile-view box-1">
                                        <div>User ID: <%=user.userId%></div>
                                        <div>Name: <%=user.username%></div>
                                    </div>
                                    <div class="mobile-view box-2">
                                        <div>Photo: <img src="/uploads/<%=user.imgURL%>" alt="User Photo"></div>
                                        <div>
                                            <span>Action</span>
                                            <div class="btn-container">
                                                <button class="view-button btn-1" onClick="onDone('<%= user.userId %>')">Done</button>
                                                <button class="view-button btn-2" onClick="onDelete('<%= user.userId %>')">Delete</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }else{ %>
                                <div class="details mt-4">
                                    <div class="mobile-view box-1">
                                        <div>User ID: <%=user.userId%></div>
                                        <div>Name: -</div>
                                    </div>
                                    <div class="mobile-view box-2">
                                        <div>Photo: <img src="/images/dp.jpeg" alt="User Photo"></div>
                                        <div>
                                            <span>Action</span>
                                            <div class="btn-container">
                                                <button class="view-button btn-2" onClick="onDelete('<%= user.userId %>')">Delete</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <%}%>
                    <% }) %>
                <% } else { %>    
                    <span class="text-box">
                        No user created
                    </span>
                <% } %>
            <% } else { %>
                <div class="spinner-border" role="status">
                    <span class="sr-only">Loading...</span>
                  </div>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous">
        </script>

    <script src="/scripts/viewUser.js"></script>
</body>

</html>